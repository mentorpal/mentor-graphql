{
  "name": "mentor-graphql",
  "version": "1.0.0",
  "description": "mentor-admin project backend setup",
  "main": "dist/app.js",
  "engines": {
    "node": ">=16.14",
    "npm": ">=6.13.1"
  },
  "overrides": {
    "mongo-cursor-pagination": {
      "bson": "6.9.0"
    },
    "mongodb-memory-server-core": {
      "bson": "6.9.0"
    },
    "@types/glob": {
      "@types/minimatch": "5.1.2"
    }
  },
  "scripts": {
    "build": "tsc",
    "deps:update": "npx ncu -u",
    "deploy:dev": "NODE_OPTIONS=--max_old_space_size=4000 sls deploy -s dev --region us-east-1",
    "deploy:qa": "NODE_OPTIONS=--max_old_space_size=4000 sls deploy -s qa --region us-east-1",
    "deploy:prod": "NODE_OPTIONS=--max_old_space_size=4000 sls deploy -s prod --region us-east-1",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx}'",
    "lint:fix": "eslint src --ext ts --ext js --fix",
    "start": "tsc --traceResolution && node dist/server.js",
    "test": "export ENV=test && export NODE_ENV=test && npx mocha -r tsconfig-paths/register -r ts-node/register -r source-map-support/register 'test/*.{spec,test}.{js,ts}' 'test/**/*.{spec,test}.{js,ts}' --timeout 10000 --full-trace --recursive --reporter spec --delay --exit",
    "test:integration": "ENV=test NODE_ENV=test npx mocha -r tsconfig-paths/register -r ts-node/register -r source-map-support/register 'test/integration/**/*.ispec.ts' --timeout 15000 --full-trace --recursive --reporter spec",
    "test:all": "npm run test:format && npm run test:lint && npm run test:audit && npm run test:types && npm test",
    "test:audit": "npm audit --audit-level=moderate --production",
    "test:format": "prettier --check '**/*.{js,jsx,json,ts,tsx}'",
    "test:lint": "eslint src --ext ts --ext js --max-warnings 47",
    "test:types": "tsc --noEmit",
    "license:fix": "license-check-and-add remove -f license-config.json && license-check-and-add add -f license-config.json",
    "license:deploy": "license-check-and-add remove -f license-config.json && license-check-and-add add -f $LICENSE_CONFIG",
    "test:license": "license-check-and-add check -f license-config.json"
  },
  "author": "CVM",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.410.0",
    "@sentry/serverless": "^7.64.0",
    "@types/object-path": "^0.11.1",
    "axios": "^1.8.3",
    "base64url": "^3.0.1",
    "bson": "^6.9.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "graphql-type-json": "^0.3.2",
    "ishex": "^2.1.0",
    "jsonwebtoken": "^9.0.1",
    "longjohn": "^0.2.12",
    "mongo-cursor-pagination": "^8.1.3",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.0",
    "mongoose-findorcreate": "^4.0.0",
    "morgan": "^1.10.0",
    "neoip": "^3.0.1",
    "nodemailer": "^6.9.9",
    "object-path": "^0.11.8",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "remove-markdown": "^0.5.0",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/ejson": "^2.2.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.6",
    "@types/nodemailer": "^6.4.10",
    "@types/passport": "^1.0.12",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-jwt": "^3.0.9",
    "@types/remove-markdown": "^0.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "chai": "^4.3.8",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "license-check-and-add": "^4.0.5",
    "mocha": "^10.2.0",
    "mocha-logger": "^1.0.8",
    "mocha-prepare": "^0.1.0",
    "mongo-unit": "^3.3.0",
    "prettier": "^3.0.2",
    "serverless": "^3.34.0",
    "serverless-domain-manager": "^7.1.2",
    "serverless-offline": "^12.0.4",
    "serverless-offline-ssm": "^6.2.0",
    "serverless-plugin-typescript": "^2.1.5",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
